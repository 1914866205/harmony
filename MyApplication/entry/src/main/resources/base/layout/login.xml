<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#143255"
    ohos:orientation="vertical">

    <Component
        ohos:height="300px"/>

    <Text
        ohos:height="match_content"
        ohos:width="850px"
        ohos:layout_alignment="horizontal_center"
        ohos:left_margin="240px"
        ohos:text="登录"
        ohos:text_color="#ffffff"
        ohos:text_size="32fp"/>

    <Text
        ohos:text="用户名"
        ohos:height="match_content"
        ohos:width="250px"
        ohos:left_margin="80px"
        ohos:text_color="#ffffff"
        ohos:text_size="24fp"
        ohos:top_margin="100px"/>

    <TextField
        ohos:id="$+id:login_username"
        ohos:height="match_content"
        ohos:width="600px"
        ohos:background_element="#EAEDED"
        ohos:hint="请输入用户名"
        ohos:layout_alignment="horizontal_center"
        ohos:left_margin="100px"
        ohos:padding="30px"
        ohos:text_color="#708090"
        ohos:text_size="18fp"
        ohos:top_margin="-95px"/>


    <Text
        ohos:text="密  码"
        ohos:height="match_content"
        ohos:width="250px"
        ohos:left_margin="80px"
        ohos:text_color="#ffffff"
        ohos:text_size="24fp"
        ohos:top_margin="100px"/>

    <TextField
        ohos:id="$+id:login_password"
        ohos:height="match_content"
        ohos:width="600px"
        ohos:background_element="#EAEDED"
        ohos:hint="请输入密码"
        ohos:layout_alignment="horizontal_center"
        ohos:left_margin="100px"
        ohos:padding="30px"
        ohos:text_color="#708090"
        ohos:text_input_type="pattern_password"
        ohos:text_size="18fp"
        ohos:top_margin="-95px"/>


    <DirectionalLayout
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="50px"
        ohos:left_margin="410px">
        <Button
            ohos:id="$+id:login_Btn"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="登录"
            ohos:text_size="20fp"
            ohos:padding="10vp"
            ohos:text_color="#000000"
            ohos:background_element="#EAEDED"
            ohos:layout_alignment="horizontal_center"/>

        <Button
            ohos:id="$+id:toRegBtn"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="注册"
            ohos:text_size="20fp"
            ohos:padding="10vp"
            ohos:text_color="#000000"
            ohos:background_element="#EAEDED"
            ohos:layout_alignment="horizontal_center"
            ohos:left_margin="160px"/>
    </DirectionalLayout>

</DirectionalLayout>
