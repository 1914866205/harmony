<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#143255"
    ohos:orientation="vertical">

    <Component
        ohos:height="300px"/>

    <Text
        ohos:height="match_content"
        ohos:width="850px"
        ohos:layout_alignment="horizontal_center"
        ohos:left_margin="140px"
        ohos:text="涛涛的注册页面"
        ohos:text_color="#ffffff"
        ohos:text_size="32fp"/>

    <Text
        ohos:text="用户名"
        ohos:height="match_content"
        ohos:width="250px"
        ohos:left_margin="80px"
        ohos:text_color="#ffffff"
        ohos:text_size="24fp"
        ohos:top_margin="100px"/>

    <TextField
        ohos:id="$+id:reg_username"
        ohos:height="match_content"
        ohos:width="600px"
        ohos:background_element="#EAEDED"
        ohos:hint="请输入用户名"
        ohos:layout_alignment="horizontal_center"
        ohos:left_margin="100px"
        ohos:padding="30px"
        ohos:text_color="#708090"
        ohos:text_size="18fp"
        ohos:top_margin="-95px"/>


    <Text
        ohos:text="密  码"
        ohos:height="match_content"
        ohos:width="250px"
        ohos:left_margin="80px"
        ohos:text_color="#ffffff"
        ohos:text_size="24fp"
        ohos:top_margin="100px"/>

    <TextField
        ohos:id="$+id:reg_password1"
        ohos:height="match_content"
        ohos:width="600px"
        ohos:text_input_type="pattern_password"
        ohos:background_element="#EAEDED"
        ohos:hint="请输入密码"
        ohos:layout_alignment="horizontal_center"
        ohos:left_margin="100px"
        ohos:padding="30px"
        ohos:text_color="#708090"
        ohos:text_size="18fp"
        ohos:top_margin="-95px"/>

    <Text
        ohos:text="确认密码"
        ohos:height="match_content"
        ohos:width="250px"
        ohos:left_margin="80px"
        ohos:text_color="#ffffff"
        ohos:text_size="24fp"
        ohos:top_margin="100px"/>

    <TextField
        ohos:id="$+id:reg_password2"
        ohos:height="match_content"
        ohos:width="600px"
        ohos:text_input_type="pattern_password"
        ohos:background_element="#EAEDED"
        ohos:hint="请再次输入密码"
        ohos:layout_alignment="horizontal_center"
        ohos:left_margin="100px"
        ohos:padding="30px"
        ohos:text_color="#708090"
        ohos:text_size="18fp"
        ohos:top_margin="-95px"/>


    <Text
        ohos:text="昵称"
        ohos:height="match_content"
        ohos:width="250px"
        ohos:left_margin="80px"
        ohos:text_color="#ffffff"
        ohos:text_size="24fp"
        ohos:top_margin="100px"/>

    <TextField
        ohos:id="$+id:reg_name"
        ohos:height="match_content"
        ohos:width="600px"
        ohos:background_element="#EAEDED"
        ohos:hint="请输入昵称"
        ohos:layout_alignment="horizontal_center"
        ohos:left_margin="100px"
        ohos:padding="30px"
        ohos:text_color="#708090"
        ohos:text_size="18fp"
        ohos:top_margin="-95px"/>


    <Text
        ohos:text="年龄"
        ohos:height="match_content"
        ohos:width="250px"
        ohos:left_margin="80px"
        ohos:text_color="#ffffff"
        ohos:text_size="24fp"
        ohos:top_margin="100px"/>

    <TextField
        ohos:id="$+id:reg_age"
        ohos:height="match_content"
        ohos:width="600px"
        ohos:background_element="#EAEDED"
        ohos:hint="请输入年龄"
        ohos:layout_alignment="horizontal_center"
        ohos:left_margin="100px"
        ohos:padding="30px"
        ohos:text_color="#708090"
        ohos:text_size="18fp"
        ohos:top_margin="-95px"/>



    <Text
        ohos:text="性别"
        ohos:height="match_content"
        ohos:width="250px"
        ohos:left_margin="80px"
        ohos:text_color="#ffffff"
        ohos:text_size="24fp"
        ohos:top_margin="100px"/>

    <TextField
        ohos:id="$+id:reg_sex"
        ohos:height="match_content"
        ohos:width="600px"
        ohos:background_element="#EAEDED"
        ohos:hint="请输入性别"
        ohos:layout_alignment="horizontal_center"
        ohos:left_margin="100px"
        ohos:padding="30px"
        ohos:text_color="#708090"
        ohos:text_size="18fp"
        ohos:top_margin="-95px"/>

    <DirectionalLayout
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="50px"
        ohos:left_margin="410px">
        <Button
            ohos:id="$+id:regBtn"
            ohos:height="match_content"
            ohos:width="450px"
            ohos:text="注册"
            ohos:text_size="20fp"
            ohos:padding="10vp"
            ohos:text_color="#FFFFFF"
            ohos:background_element="#0EAB8D"
            ohos:layout_alignment="horizontal_center"/>

    </DirectionalLayout>

</DirectionalLayout>
